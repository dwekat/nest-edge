{
  "name": "nest-edge",
  "version": "1.0.0",
  "description": "Use Edge.js templating engine in NestJs applecation.",
  "main": "dist/index.js",
  "files": [
    "dist/**/*",
    "*.md"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "build": "tsc",
    "prepare" : "npm run build",
    "prepublishOnly" : "npm test && npm run lint",
    "preversion" : "npm run lint",
    "version" : "npm run format && git add -A src",
    "postversion" : "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dwekat/nest-edge.git"
  },
  "keywords": [
    "NestJs",
    "Edgejs",
    "nest template engine",
    "nest mvc"
  ],
  "author": "Mustafa Dwaikat",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dwekat/nest-edge/issues"
  },
  "homepage": "https://github.com/dwekat/nest-edge#readme",
  "devDependencies": {
    "@types/node": "^17.0.13",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "edge.js": "^5.3.2"
  }
}
