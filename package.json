{
  "name": "nest-edge",
  "version": "1.0.0",
  "description": "Use Edge.js templating engine in NestJs applecation.",
  "main": "dist/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "dist/**/*",
    "*.md"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "test": "jest --config jestconfig.json",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "build": "tsc -p tsconfig.build.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dwekat/nest-edge.git"
  },
  "keywords": [
    "NestJs",
    "Edgejs",
    "nest template engine",
    "nest mvc"
  ],
  "author": "Mustafa Dwaikat",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dwekat/nest-edge/issues"
  },
  "homepage": "https://github.com/dwekat/nest-edge#readme",
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.4.7",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "edge.js": "^5.3.2"
  }
}
